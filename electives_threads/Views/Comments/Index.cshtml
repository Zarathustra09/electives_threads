@model List<electives_threads.Models.Comment>

@{
    ViewData["Title"] = "Comment Index";
}

<h1>Comment Index</h1>

@if (Model == null || Model.Count == 0)
{
        <p>No comments found.</p>
}
else
{
        <ul>
        @foreach (var comment in Model)
        {
                    <li>
                        <strong>User ID:</strong> @comment.UserID<br />
                        <strong>Thread ID:</strong> @comment.ThreadID<br />
                        <strong>Content:</strong> @comment.Content<br />
                        <strong>Likes:</strong> @comment.Likes<br />
                        <strong>Dislikes:</strong> @comment.Dislikes<br />
                        <strong>Created At:</strong> @comment.CreatedAt<br />
                        <strong>Updated At:</strong> @comment.UpdatedAt

                                <!-- Like and Dislike buttons -->
                        <form method="post" asp-action="Like" asp-route-threadId="@ViewBag.ThreadID">
                            <button type="submit" class="btn btn-success">Like</button>
                        </form>

                        <form method="post" asp-action="Dislike" asp-route-threadId="@ViewBag.ThreadID">
                            <button type="submit" class="btn btn-danger">Dislike</button>
                        </form>
                    </li>
        }
        </ul>
}
<a asp-action="Create" class="btn btn-primary">Create Comment</a>